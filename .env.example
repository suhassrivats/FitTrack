# Flask Application Secrets
# IMPORTANT: Copy this file to .env and fill in your own values
# Never commit .env file to git!

# Secret keys for Flask sessions and JWT tokens
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# Database Configuration
# For local development with SQLite:
# DATABASE_URL=sqlite:///fittrack.db
# For PostgreSQL (production):
# DATABASE_URL=postgresql://user:password@host:port/database
DATABASE_URL=sqlite:///fittrack.db

# Server Configuration
PORT=5000

# CORS Configuration (comma-separated origins)
# For development, use * to allow all origins
# For production, specify your mobile app or web domains
CORS_ORIGINS=*

# Flask Environment
FLASK_ENV=development
